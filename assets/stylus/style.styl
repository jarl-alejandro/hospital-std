@import 'ed-grid.styl'
@import 'material-icons.styl'
@import 'color.styl'
@import 'sidebar.styl'
@import 'workspace.styl'
@import 'form28.styl'
@import 'perfil.styl'
@import 'agenda.styl'
@import 'modal.styl'

body
  background: #e4e7ec;
  font-family: "Roboto", sans-serif
a
  text-decoration none !important
td, th
  border-radius inherit
.circle-avatar
  background #00BCD4
  display flex
  justify-content center
  align-items center
  font-size 2.5em
  color white
  height 50px
  width 50px
  border-radius 50%
.circle-avatar--name
  background danger
  margin-top 6px
.container
  display flex
  justify-content flex-end
.center-flex
  display flex
  justify-content center
.button-collapse
  display block !important
.full-height
  height 100vh
.no-margin
  margin 0 !important
.margin-top
  margin-top 1em
.none
  display none
.bxn
  box-shadow none !important
.avatar-nav
  height 58px
  margin-top 3px
