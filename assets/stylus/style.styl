@import 'ed-grid.styl'
@import 'material-icons.styl'
@import 'color.styl'
@import 'sidebar.styl'
@import 'workspace.styl'
@import 'form28.styl'
@import 'perfil.styl'
@import 'agenda.styl'
@import 'modal.styl'
@import 'turnos.styl'
@import 'grafica.styl'
@import 'form056.styl'
@import 'grafico-form056.styl'
@import 'adulto.styl'

body
  background: #e4e7ec;
  font-family: "Roboto", sans-serif
a
  text-decoration none !important
td, th
  border-radius inherit
input:disabled
  cursor no-drop !important
.circle-avatar
  background #00BCD4
  display flex
  justify-content center
  align-items center
  font-size 2.5em
  color white
  height 50px
  width 50px
  border-radius 50%
.circle-avatar--name
  background danger
  margin-top 6px
.container
  display flex
  justify-content flex-end
.center-flex
  display flex
  justify-content center
.button-collapse
  display block !important
.full-height
  height 100vh
.no-margin
  margin 0 !important
.margin-top
  margin-top 1em
.none
  display none
.bxn
  box-shadow none !important
.avatar-nav
  height 58px
  margin-top 3px

#test-swipe-1, #test-swipe-2, #test-swipe-3
  display grid
  grid-template-columns 50% 50%
#test-swipe-3
  padding 1em
  display flex
  flex-wrap wrap
.grid-divider
  display grid
  grid-template-columns 50% 50%
  grid-gap 1em
.tabs-horarios
  background white
  padding 1em
  box-shadow 0px 0px 1px rgba(black, 0.5)
  ul
    margin-bottom 1em
.dia
  cursor pointer
.hours
  i
    transition all ease .3s
    animation-name girando
    animation-iteration-count infinite
    animation-timing-function linear
    animation-duration 1s
    transform-style preserve-3d
@keyframes girando
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.dias-asiganado__select
  transition all ease .3s
  background primary
  color white
  transform scale(.9)
  cursor pointer

.dias-asiganado__active
  transition all ease .3s
  background danger
  color white
  transform scale(.9)
  cursor pointer
.select2-container
  position relative
  z-index 111111111 !important
  width 100% !important
.select2-container--default
.select2-selection--single
  border 0 !important
  border-bottom 1px solid #9e9e9e !important
  border-radius inherit !important
  outline none !important
.picker
  z-index 1111111111111111 !important

.grid__form
  display grid
  grid-template-columns 47% 47%
  grid-gap 1em
  justify-content center
.form__empresa
  background white
  padding 1em
  border-radius 3px
  position relative
.floating-empresa
  position absolute !important
  right -2em
  top -1em
.mg-top
  margin-top 1em
.flex-boton
  display flex !important
  justify-content center
  align-items center
  padding .2em 0
.u-noMargin
  margin 0 !important
.u-bold
  font-weight bolder
.u-none
  display none
.u-pointer
  cursor pointer
.modal
  z-index 1003333 !important
#toast-container
  z-index 10000222222222222222222 !important
.u-pointer
  cursor pointer
.no-boder--bottom
  border-bottom 0