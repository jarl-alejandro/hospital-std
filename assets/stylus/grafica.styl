#grafica-section
  overflow auto
  width 76em
  display grid
  grid-template-columns 50% 50% 50%
  grid-gap 32em
.Grafica-wrapper
  width 180%
  margin-left 3em
.grafica028A
  width 100%
  height 30em
  margin-bottom 2em
  background-size 100% 100%
  position relative
  img
    position absolute
    width 122%
    height 112%
    top -1em
  svg
    position absolute
    transform scaleY(-1)
    z-index 11
    width 86.2%
    height 86.78%
    left 7.4%
    top 1.2em
    background rgba(0,0,0,.1)

.GraficaHeader
  &-title
    margin 0
    text-align center
  &-message
    text-align center
  &-nino
    border-bottom 3px solid #0197d6
    color #0197d6
  &-nina
    color #e57eb5
    border-bottom 3px solid #e57eb5
