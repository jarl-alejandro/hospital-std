#grafica-section
  overflow auto
  width 76em
  display grid
  grid-template-columns 50% 50% 50%
  grid-gap 32em
#grafica_curva_crecimientoPerimetro
  width 58.4em
  left 5.6em
  height 25.8em
#grafica_curva_crecimientoLongitud
  width 58.6em
  left 7.6%
#grafica_curva_crecimiento
  left 7.2%
  width 86.8%
.Grafica-wrapper
  width 180%
  margin-left 3em
.grafica028A
.grafica028ALongitud
.grafica028APerimetro
  width 100%
  height 30em
  margin-bottom 2em
  background-size 100% 100%
  position relative
  img
    position absolute
    width 122%
    height 112%
    top -1em
  svg
    position absolute
    transform scaleY(-1)
    z-index 11
    width 86.2%
    height 86.78%
    left 7.4%
    top 1.2em

.GraficaHeader
  &-title
    margin 0
    text-align center
  &-message
    text-align center
  &-nino
    border-bottom 3px solid #0197d6
    color #0197d6
  &-nina
    color #e57eb5
    border-bottom 3px solid #e57eb5

.tooltip-svg
  z-index 111
  background white
  color black
  position absolute
  padding 1em 2em
  border-radius 1px
  box-shadow 0px 0px 1px rgba(0,0,0,0.5)
  transition all ease 1s
  display flex
  justify-content center
  align-items center
  &-Mujer
    border 3px solid #e47db4
  &-Hombre
    border 3px solid #0197d6

circle
  cursor pointer
