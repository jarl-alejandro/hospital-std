      height 6em !important
.loginForm
  font-weight bold
  margin-top .5em !important

.Informativo-colores
  width 100%
  background rgba(255, 152, 0, 0.35)
  position fixed
  bottom 0
  left 0
  font-weight bold
  &--title
    margin-left 1rem
  &--list
    display: flex;
    justify-content: space-around;
    li
      display grid
      grid-template-columns 33% 102%
      align-items center
      p
        margin 0

