.workSpace
  width 79%
  padding 1em

.form
  background white
  padding 0
  padding-bottom 2em
  border-radius 3px
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
  header
    background primary
    text-align center
    color white
    padding 6px 0
    border-radius 3px 3px 0 0
    h3
      margin 0
      font-size: 1.5em
.form__scroll
  overflow-y auto
  height 29em
  width 100%
  display flex
  flex-wrap wrap
  justify-content center
.form__input
  padding 1em
  label
    color #929fae
    font-weight 500
    font-size 1em
  input, textarea, select
    background-color transparent
    border none
    border-bottom 1px solid #9e9e9e
    border-radius 0
    outline none !important
    height 3rem
    width 100%
    font-size 1rem
    margin 0 0 20px 0
    padding 0
    box-shadow none
    box-sizing content-box
    transition all 0.3s
    &:focus
      box-shadow 0 1px 0 #093677 !important
      border-bottom 1px solid #093677 !important
      color #093677

    &::-webkit-input-placeholder
      color #093677
    &::-moz-placeholder
      color #093677
    &:-ms-input-placeholder
      color #093677
    &:-moz-placeholder
      color #093677
    &::placeholder
      color #093677
.btn__flat
  background primary
  color white
  transition all ease .5s
  outline none
  box-shadow inset 0px -4px 0px rgba(0,0,0,0.15)
  border-radius 3px
  width 6.5em
  font-weight bold
  font-size 15px
  &:hover
    background rgba(primary, .5)
  &:active
    transform scale(0.9)

widthTable = 700px
.tableContainer
  overflow-x auto
  background white
  box-shadow rgba(0, 0, 0, 0.16) 0px 3px 10px, rgba(0, 0, 0, 0.1) 0px 2px 1px

.tableData
  min-width widthTable
  border-collapse collapse
  width 100%
  thead
    background deepskyblue
    color white
  tr
    border-bottom 1px solid #999
    border-collapse collapse
    transition all ease .3s
    &:hover
      background #00a3d9
      color white
  tbody tr:last-child
    border none
  th
    padding 1em
  td
    padding .5em

.Title
  text-align center
  font-size 2em
  margin 0  0.5em 0
  color #585757
.formContainer
  position absolute
  top 6em
  z-index 1111111
  visibility hidden
  opacity 0
  height 0
  transition all ease .5s
  &-active
    visibility visible
    opacity 1
@media (max-width: 414px)
  .formContainer
    left 5em
