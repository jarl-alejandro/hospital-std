html, head, body
  width 100%
  height 100%
  font-size 16px
  font-family sans-serif
  margin 0
  padding 0
  box-sizing border-box
footer
  background #383737
  display flex !important
  justify-content center
  flex-wrap wrap
  align-items center
  h6, h5
    width 100%
    text-align center
    margin 0
    font-weight bold
    color white
.background-image
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-position center
  background-size cover
  z-index -1
.Home
  width 100%
  height 99vh
  position relative
  h1
    margin 0
  &-imagen
    background-image url(../img/hgd.jpg)
  &-content
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    height 100%
    h1
      font-weight bold
      width 100%
      text-align center
      font-size 10em
      color brown

.Mapa
  width 100%
  height 100%
  background -webkit-linear-gradient(left,rgba(77,0,82,0.65),rgba(7,0,84,0.8) 100%)
  background linear-gradient(right,rgba(77,0,82,0.65) 0,rgba(7,0,84,0.8) 100%)
  position relative
  &-imagen
    background-image url(../img/map.jpg)
  &-content
    display grid
    grid-template-columns repeat(2, 55%)
    align-items center
    padding 1em
  h2
    margin 0
    color white
    font-size 10em
    text-align center
