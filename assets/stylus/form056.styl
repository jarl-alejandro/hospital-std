.bold-input
  color #585757 !important
  font-weight bold

.grid-header
  display grid
  grid-template-columns 70% 30%
  grid-gap 10px
.grid-paciente
  display grid
  grid-template-columns 87% 13%
  grid-gap 10px

.form056-header-names
  border 1px solid #ccc
  &--head
  &--body
    display grid
    grid-template-columns repeat(4, 1fr)
    margin 0
    margin-left 1em
  &--head
    font-weight bold
.form056-header-establecimiento
  p
    border-left 1px solid #ccc
    border-right 1px solid #ccc
    border-top 1px solid #ccc
    &:nth-child(2)
      border-bottom 1px solid #ccc
.paciente-nacimiento
  p
    text-align center
    margin 1em 0
    color #585757
    font-size 12px
    font-weight bold
  ul
    display grid
    grid-template-columns repeat(3, 1fr)
    text-align center
    margin 0
    li
      border-top 1px solid #ccc
      &:first-child
        border-left 1px solid #ccc
      &:nth-child(even)
        border-right 1px solid #ccc
      &:nth-child(odd)
        border-right 1px solid #ccc
    &:last-child
      border-bottom 1px solid #ccc
  &--header
    color #585757
    font-weight bold

.container-code-pronvia
  display grid
  grid-template-columns 50% 20% 20% 20%
  align-items center
  grid-gap 10px
  label
  input
    font-size 11.5px
  p
    font-size 15px
.celda-code-container
  display grid
  grid-template-columns 27% 10% 10% 10% 10% 10% 10%
.celda-code
  border-top 1px solid #ccc
  border-left 1px solid #ccc
  border-bottom 1px solid #ccc
  height 22px
  width 24px
  &:last-child
    border-right 1px solid #ccc
.grid-cellphone
  display grid
  grid-template-columns 32% 59%
  align-items center

.container-grid-lugar
  display grid
  grid-template-columns 64% 25% 25%
  label
    font-size 12px
