.receta
  background white
  box-shadow 0 1px 1.5px #a7a7a7, 0 0px 1.5px #a7a7a7
  border-radius 3px
  position relative
  &-table
    margin 0 auto
    width 90%
    padding-bottom 1rem
  &-informativo
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 1rem
    width 92%
    margin 0 auto
    padding 1rem 0

.header-receta
  text-align center
  padding-bottom 10px
  &--img
    width 239px
    height 95px
    margin 0 auto
  &--title,
  &--subtitle
    margin 0
    font-size 20px
    font-weight bold
    padding 0
    text-transform uppercase
    color #585757
.Form-medicine
  background white
  position fixed
  top 4rem
  left 3%
  width 95%
  box-shadow 0 1px 1.5px #a7a7a7, 0 0px 1.5px #a7a7a7
  border-radius 3px
  z-index 1111
  display none
  &--title
    text-align center
    margin 0
    font-size 34px
    font-weight bold
    padding 0
    text-transform uppercase
    line-height 40px
    color #585757
    padding 1rem 0
  &--search
    border solid #ccc
    width 96%
    margin 0 auto
    display flex
    border-radius .5rem
    margin-bottom 1rem
    align-items center
    label
      margin-left 13px
    input
      flex-grow 1
      border none !important
      margin 0 !important
      margin-left 1rem !important
      box-shadow none !important
  &--table
    width 96%
    margin 0 auto
    margin-bottom 1rem
  &--actions
    display flex
    justify-content space-around
.form-solicitud
  width 80%
  margin 0 auto
  padding-bottom 2rem
  display grid
  grid-template-columns repeat(2, 1fr)
  grid-gap 0 12px
  div
    margin-top 1rem
.Form-medicine--table
  table
    overflow-x auto
    display block
  tr
    position relative
  th
    &:last-child
      background-color white
      position absolute
      right 3.5rem
      margin-top 46px
      padding 0
  td
    &:last-child
      padding 0
      background-color white
      width 8rem
      position absolute
      right 1.7rem
      margin-top 11px
    button
      margin 0 auto

.ellipsis
  margin 0
  margin-right 10px
  white-space nowrap

.receta-table
  overflow-y auto
  height 11.9rem
  display block
  padding 10px 19px
.btn-medicina
  position absolute
  right 0
  top 6rem

.loader-mask
  background-color rgba(black, 0.5)
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 11111111111

.is-loader
  position absolute
  left 40%
.container-loader {
  width: 200px;
  height: 200px;
  position: absolute;
  top: 50%;
  left: 26%
  transform: translate(-50%, -50%);
  margin: auto;
  filter: url('#goo');
  animation: rotate-move 2s ease-in-out infinite;
  z-index: 1111111111111111111;
}
.is-loader--title
  color #ffffff
  position relative
  z-index 1111111111111111111
  top 19rem
  left -14%

.dot {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: #000;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.dot-3 {
  background-color: #f74d75;
  animation: dot-3-move 2s ease infinite, index 6s ease infinite;
}

.dot-2 {
  background-color: #10beae;
  animation: dot-2-move 2s ease infinite, index 6s -4s ease infinite;
}

.dot-1 {
  background-color: #ffe386;
  animation: dot-1-move 2s ease infinite, index 6s -2s ease infinite;
}

@keyframes dot-3-move {
  20% {transform: scale(1)}
  45% {transform: translateY(-18px) scale(.45)}
  60% {transform: translateY(-90px) scale(.45)}
  80% {transform: translateY(-90px) scale(.45)}
  100% {transform: translateY(0px) scale(1)}
}

@keyframes dot-2-move {
  20% {transform: scale(1)}
  45% {transform: translate(-16px, 12px) scale(.45)}
  60% {transform: translate(-80px, 60px) scale(.45)}
  80% {transform: translate(-80px, 60px) scale(.45)}
  100% {transform: translateY(0px) scale(1)}
}

@keyframes dot-1-move {
  20% {transform: scale(1)}
  45% {transform: translate(16px, 12px) scale(.45)}
  60% {transform: translate(80px, 60px) scale(.45)}
  80% {transform: translate(80px, 60px) scale(.45)}
  100% {transform: translateY(0px) scale(1)}
}

@keyframes rotate-move {
  55% {transform: translate(-50%, -50%) rotate(0deg)}
  80% {transform: translate(-50%, -50%) rotate(360deg)}
  100% {transform: translate(-50%, -50%) rotate(360deg)}
}

@keyframes index {
  0%, 100% {z-index: 3}
  33.3% {z-index: 2}
  66.6% {z-index: 1}
}

